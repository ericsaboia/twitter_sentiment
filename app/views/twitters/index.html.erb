<div class="row">
  <%= form_tag(twitters_path('json'), method: "get", id: 'search-form') do |f| %>
    <div class="col-sm-10">
      <input class="form-control input-lg" type="text" name="search-text" id="search-text" placeholder="What are you searching for?">
    </div>
    <div class="col-sm-2">
      <input class="btn btn-primary btn-lg" name="search-button" id="search-button" type="submit" value="Search">
    </div>
  <% end %>
</div>

<div class="search-results" id="search-results"></div>